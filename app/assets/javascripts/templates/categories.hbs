<div class="map pure-u-1 pure-u-sm-20-24">
  {{google-map latitude="50.1015737" longitude="14.4253931" contacts=contacts}}
</div>

<div class="sidebar pure-u-1 pure-u-sm-4-24">
  <ul>

    {{link-to 'Všechny služby' 'categories.index' tagName="li" class="all"}}

    {{#each category in model}}
      {{#link-to 'categories.show' category tagName="li"}}
        {{category.name}}
      {{/link-to}}
    {{/each}}

  </ul>
</div>

<div class="content pure-u-1 pure-u-sm-20-24">

  {{outlet}}

  {{#each contacts}}
    {{name}}
  {{/each}}

</div>
