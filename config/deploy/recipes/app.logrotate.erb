<%= shared_path %>/log/<%= rails_env %>.log
{
  su <%= user %> <%= user %>
  weekly
  missingok
  rotate 8
  compress
  delaycompress
  copytruncate
  notifempty
}

<%= shared_path %>/log/access.log
<%= shared_path %>/log/error.log
{
  su nginx nginx
  weekly
  missingok
  rotate 8
  compress
  delaycompress
  copytruncate
  notifempty
}
